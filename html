  </div>
  
  <script>
    document.addEventListener("DOMContentLoaded", function() {
      const imagePopup = document.getElementById("imagePopup");
      const popupImage = imagePopup.querySelector(".popup-image");
      const nextButton = document.getElementById("nextButton");

      const images = [
        "/image1.jpeg",
        "/image2.jpeg"
      ];

      let currentImageIndex = 0;

      // Show the image popup
      function showImagePopup() {
        popupImage.src = images[currentImageIndex];
        imagePopup.style.display = "block";
      }

      // Hide the image popup
      function hideImagePopup() {
        imagePopup.style.display = "none";
      }

      // Show next alert and hide the image popup
      function showNextAlert() {
        hideImagePopup();
        if (currentImageIndex < images.length - 1) {
          currentImageIndex++;
          alert("Semangat nugasnya cantik");
          alert("Semangat nugasnya cantik");
          alert("Semangat nugasnya cantik");
          showImagePopup();
        } else {
          alert("Sekian dari aku terimakasih");
        }
      }

      // Show the first alert
      alert("Hallo syifaa");
      alert("Lagi nugas yaaaa?? jawab iya   atau kulempar pake koin ipb")
      alert("Semangat nugasnya cantik")
      alert("apakah syifa sudah makan?kalau belum makan mari makann")
      alert("sapa niii yang ngasih syifa tugas?bikin susah aj (emot marah)")
      alert("Semangat nugasnya cantik")
      alert("lagi buat tabel ya? ")
      alert("coba adik adik jawab, tabel tabel apa yang paling enak. jawab di dalam hati saja dik")
      alert("jawabannya ta'beliin rubicon, wrwrwrwrwrwrwr")
      alert("Semangat nugasnya cantik")
      alert("Sudah sepertinya saya garing ya")
      alert("jangan galak galak dan jangan jutek ya wahai mba mba efkaha yang fomo")
      alert("titip salam buat ibu!! maaf ya ibu aku mau kenalan tapi belum bisa :(")
      alert("Semangat nugasnya cantik");
      alert("Semangat nugasnya cantik");
      alert("Semangat nugasnya cantik");
      showImagePopup();

      // Set up next button click event
      nextButton.addEventListener("click", showNextAlert);
    });
  </script>
